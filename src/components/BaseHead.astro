---
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import { SITE_TITLE, SEO_CONFIG } from "../consts";
import { generateURL } from "../util.ts";

interface Props {
  title: string;
  description: string;
  keywords?: string;
  image?: string;
  structuredData?: String;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.url);
const {
  title,
  description,
  keywords = SEO_CONFIG.keywords,
  image = generateURL("/hero.webp") as string,
  structuredData,
} = Astro.props;

const faviconURL = generateURL("/favicon.ico");
const rssURL = generateURL("/rss.xml");
const toggleThemeURL = generateURL("/toggle-theme.js");
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={faviconURL} />
<meta name="generator" content={Astro.generator} />

<!-- rss -->
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={rssURL}
/>

<SEO
  title={title}
  description={description}
  canonical={canonicalURL.href}
  openGraph={{
    basic: {
      title: title,
      type: "website",
      image: image,
      url: canonicalURL.href,
    },
    optional: {
      description: description,
    },
    image: {
      alt: title,
    },
  }}
  twitter={{
    card: "summary_large_image",
    title: title,
    description: description,
    image: image,
  }}
  extend={{
    meta: [
      { name: "keywords", content: keywords },
      { name: "robots", content: "index, follow" },
    ],
    link: [{ rel: "canonical", href: canonicalURL.href }],
  }}
/>

<!-- Google JSON-LD Structured data -->
{
  structuredData && (
    <script is:inline type="application/ld+json" set:html={structuredData} />
  )
}

<ClientRouter />
<script is:inline src={toggleThemeURL.toString()} async></script>
